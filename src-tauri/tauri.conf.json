{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "os-hardening-rust",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "path": {
        "all": true
      },
      "fs": {
        "scope": ["$RESOURCE/*"]
      },
      "shell": {
        "all": true,
        "execute": true,
        "sidecar": true,
        "open": true,
        "scope": [
          {
            "name": "sh",
            "cmd": "sh",
            "args": true
          },

          {
            "name": "bash",
            "cmd": "bash",
            "args": true
          },
          {
            "name": "binaries/lynis",
            "args": true,
            "sidecar": true
          }
        ]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.ctrlaltdefeat.oshardening",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": ["resources/**/*"],
      "externalBin": ["binaries/lynis"]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "os-hardening-rust",
        "width": 1280,
        "height": 720
      }
    ]
  }
}
